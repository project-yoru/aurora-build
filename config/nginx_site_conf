upstream aurora-build {
    server unix:/home/deployer/deploy/aurora-build/tmp/sockets/goliath.sock fail_timeout=0;
}

server {
    listen 4000;
    server_name localhost;

    root /home/deployer/deploy/aurora-build;

    try_files $uri/index.html $uri @aurora-build;

    location @aurora-build {
        proxy_pass http://aurora-build;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
        proxy_redirect off;
    }

    error_page 500 502 503 504 /500.html;
    client_max_body_size 4G;
    keepalive_timeout 10;
}
